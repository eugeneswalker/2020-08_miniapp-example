# summit environment
SUMMIT_ALLOCATION=WarningNotSet

# make sure the allocation is in lower case
SUMMIT_ALLOCATION=`echo "$SUMMIT_ALLOCATION" | awk '{print tolower($0)}'`


FAILURE=1
# print
echo ------------------------------------------------------------
echo Summit Environment
echo ------------------------------------------------------------
if [ $SUMMIT_ALLOCATION == "WarningNotSet" ]; then
    echo
    echo ERROR
    echo ERROR: summit allocation not set ... cannot continue
    echo ERROR
    echo
    echo edit the file \'bootstrap.env\' to reflect your allocation, then re-run 
    echo
    exit $FAILURE
fi 
echo allocation .... $SUMMIT_ALLOCATION
echo ------------------------------------------------------------

